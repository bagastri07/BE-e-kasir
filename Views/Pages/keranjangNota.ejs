<!DOCTYPE html>
<html lang="{{ str_replace('_', '-', app()->getLocale()) }}">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- CSRF Token -->
    <meta name="csrf-token" content="" />

    <title>Profil</title>
    <link rel="icon" type="image/x-icon" href="/icon.ico" />
    <link href="/css/style.css" rel="stylesheet" />
    <script
      src="https://code.jquery.com/jquery-1.12.4.min.js"
      integrity="sha384-nvAa0+6Qg9clwYCGGPpDQLVpLNn0fRaROjHqs13t4Ggj3Ez50XnGQqc/r8MhnRDZ"
      crossorigin="anonymous"
    ></script>
    <script src="js/dynamic-form.js"></script>
  </head>

  <body class="bg-gray-100 h-screen antialiased leading-none font-sans">
    <div id="app"><%- include('../Templates/header-after-login') -%></div>

    <section
      class="
        mr-20
        ml-20
        mt-10
        flex flex-col
        break-words
        bg-white
        sm:border-1 sm:rounded-md sm:shadow-sm sm:shadow-lg
      "
    >
      <header
        class="
          font-semibold
          bg-gray-200
          text-gray-700
          py-5
          px-6
          sm:py-6 sm:px-8 sm:rounded-t-md
        "
      >
        Keranjang
      </header>

      <div class="w-full p-6">
        <form method="POST" action="/invoice">
          <button
            class="
              w-40
              h-10
              mb-6
              bg-green-500
              text-white
              font-bold
              py-1
              px-2
              border
              rounded
              hover:bg-green-700
            "
          >
            Lanjutkan Ke Nota
          </button>
        </form>
        <table class="min-w-full border-collapse block md:table">
          <thead class="block md:table-header-group">
            <tr
              class="
                border border-grey-500
                md:border-none
                block
                md:table-row
                absolute
                -top-full
                md:top-auto
                -left-full
                md:left-auto md:relative
              "
            >
              <th
                class="
                  bg-indigo-500
                  p-2
                  text-white
                  font-bold
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
                Nama Barang
              </th>
              <th
                class="
                  bg-indigo-500
                  p-2
                  text-white
                  font-bold
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
                Jumlah Barang
              </th>
              <th
                class="
                  bg-indigo-500
                  p-2
                  text-white
                  font-bold
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
                Harga Barang
              </th>
              <th
                class="
                  bg-indigo-500
                  p-2
                  text-white
                  font-bold
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
                Aksi
              </th>
            </tr>
          </thead>
          <tbody class="block md:table-row-group">
            <% for (var i = 0; i < carts.length; i++) { %>
            <tr
              class="
                bg-gray-300
                border border-grey-500
                md:border-none
                block
                md:table-row
              "
            >
              <td
                class="
                  p-2
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
              <%= carts[i].product.name %>
              </td>
              <td
                class="
                  p-2
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
              <%= carts[i].quantity %>
              </td>
              <td
                class="
                  p-2
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
              <%= formatRupiah(carts[i].price) %>
              </td>
              <td
                class="
                  p-2
                  md:border md:border-grey-500
                  text-left
                  block
                  md:table-cell
                "
              >
                <span class="inline-block w-1/3 md:hidden font-bold">Aksi</span>
                <form method="post" action="/cart/<%= carts[i]._id %>?_method=DELETE">
                    <button
                    class="
                      bg-red-500
                      hover:bg-red-700
                      text-white
                      font-bold
                      py-1
                      px-2
                      border border-red-500
                      rounded
                    "
                    onclick=""
                  >
                    Hapus Barang
                  </button>
                </form>
                
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% if (messages.info) { %>
          <div class="alert alert-success" role="alert">
            <p
              class="
                bg-green-500
                p-2
                text-white
                font-bold
                md:border md:border-grey-500
                text-left
              "
            >
              <%= messages.info %>
            </p>
          </div>
          <% } %>
      </div>
    </section>
  </body>
</html>
